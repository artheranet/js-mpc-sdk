{
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "Node",
    "target": "ES2015",
    "module": "ES2015",
    "esModuleInterop": true,
    "noImplicitThis": true,
    "declaration": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": false
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
